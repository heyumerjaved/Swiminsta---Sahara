<div class="new_text_img_col">
    {% if section.settings.title != blank %}
      <div class="new_text_img_col_heading">
        {{ section.settings.title }}
      </div>
    {% endif %}
    <div class="new_text_img_col_inner">
      <div class="new_text_img_col_single text_col">
        {% if section.settings.logo != blank %}
          <div class="new_text_img_col_logo">
            <img src="{{ section.settings.logo | img_url:'master' }}">
          </div>
        {% endif %}
        {% if section.settings.des != blank %}
          <div class="new_text_img_col_des">
            {{ section.settings.des }}
          </div>
        {% endif %}
        {% if section.settings.name != blank %}
          <div class="new_text_img_col_name">
            {{ section.settings.name }}
          </div>
        {% endif %}
        {% if section.settings.designation != blank %}
          <div class="new_text_img_col_designation">
            {{ section.settings.designation }}
          </div>
        {% endif %}
      </div>
      <div class="new_text_img_col_single img_col">
        {% if section.settings.model != blank %}
          <div class="new_text_img_col_model">
            <img src="{{ section.settings.model | img_url:'master' }}">
          </div>
        {% endif %}
      </div>
    </div>
</div>
<style>
@font-face {
    font-family: 'operetta_12regular';
    src: url( {{ 'operetta12-regular-webfont.woff2' | asset_url }}) format('woff2'),
         url( {{ 'operetta12-regular-webfont.woff' | asset_url }}) format('woff');
    font-weight: normal;
    font-style: normal;

}

@font-face {
    font-family: 'operetta_52medium';
    src: url( {{ 'operetta52-medium-webfont.woff2' | asset_url }}) format('woff2'),
         url( {{ 'operetta52-medium-webfont.woff' | asset_url }}) format('woff');
    font-weight: normal;
    font-style: normal;

}
  
  .new_text_img_col {
    margin: 50px auto;
    max-width: 992px;
  }
  .new_text_img_col .new_text_img_col_heading {
    color: #dc3b9d;
    text-align: center;
    margin: 0 auto;
    font-size: 24px;
    font-weight: 600;
    line-height: 25px;
  }
  .new_text_img_col .new_text_img_col_inner{
    display:grid;
    grid-template-columns: 50% 50%;
  margin-top:50px;
  }
  .new_text_img_col .new_text_img_col_single.text_col {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: #e9e9e7;
    padding: 35px;
}

  .new_text_img_col .new_text_img_col_logo {
    max-width: 150px;
}
  .new_text_img_col .new_text_img_col_des p,.new_text_img_col .new_text_img_col_des {
    text-transform: none;
    color: #000;
  font-size:14px;
}
  .new_text_img_col .new_text_img_col_designation {
    width: 100%;
    font-size: 19px;
    color: #000;
    margin-top: -10px;
}
  .new_text_img_col .new_text_img_col_name {
    margin-top:30px;
    width: 100%;
    font-family: 'operetta_52medium';
    font-size: 30px;
    color: #000;
}
  .new_text_img_col .new_text_img_col_single.img_col .new_text_img_col_model img{
    max-width:100%;
    height: 100%;
    object-fit: cover;
  }
  .new_text_img_col .new_text_img_col_model {
    display: flex;
    align-items: center;
    height: 100%;
    object-fit: cover;
}
  @media only screen and (max-width:768px){
    .new_text_img_col .new_text_img_col_inner{
      grid-template-columns: 1fr;
    }
    .new_text_img_col .new_text_img_col_heading {
      font-size: 20px;
      line-height: 20px;
    }
    .new_text_img_col .new_text_img_col_designation {
        font-size: 16px;
    }
    .new_text_img_col .new_text_img_col_name {
        font-size: 20px;
    }
  }
</style>
